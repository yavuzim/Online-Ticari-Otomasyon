@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<table class="table table-striped">
    <tr>
        <th>Cari ID</th>
        <th>Cari Ad</th>
        <th>Cari Soyad</th>
        <th>Cari Şehir</th>
        <th>Cari Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Satış Geçmişi</th>
    </tr>
    @{ 
        foreach (var item in Model)
        {
            <tr>
                <td>@item.CariId</td>
                <td>@item.CariAd</td>
                <td>@item.CariSoyadi</td>
                <td>@item.CariSehir</td>
                <td>@item.CariMail</td>
                <td><a href="/Cari/CariSil/@item.CariId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Cari/CariGetir/@item.CariId" class="btn btn-warning">Güncelle</a></td>
                <td><a href="/Cari/MusteriSatis/@item.CariId" class="btn btn-info">Detay</a></td>
            </tr>
        }
    }
</table>
<a href="/Cari/YeniCari" class="btn btn-info">Cari Ekle</a>
