@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<table class="table table-striped">
    <tr>
        <th>Personel ID</th>
        <th>Personel Ad</th>
        <th>Personel Soyad</th>
        <th>Personel Görsel</th>
        <th>Departman</th>
        <th>Güncelle</th>
        <th>Satışlar</th>
    </tr>
    @{
        foreach (var item in Model)
        {
            <tr>
                <td>@item.PersonelId</td>
                <td>@item.PersonelAd</td>
                <td>@item.PersonelSoyad</td>
                <td>@item.PersonelGorsel</td>
                <td>@item.Departman.DepartmanAd</td>
                <td><a href="/Personel/PersonelGetir/@item.PersonelId" class="btn btn-warning">Güncelle</a></td>
                <td><a href="/Departman/DepartmanPersonelSatis/@item.PersonelId" class="btn btn-info">Detay</a></td>
            </tr>
        }
    }
</table>
<a href="/Personel/PersonelEkle" class="btn btn-info">Personel Ekle</a>

