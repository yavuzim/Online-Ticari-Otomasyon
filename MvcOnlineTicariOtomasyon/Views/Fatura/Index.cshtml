@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h3>Faturalar</h3>
<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>ID</th>
        <th>Seri No</th>
        <th>Sıra No</th>
        <th>Vergi Dairesi</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Toplam</th>
        <th>Teslim Eden</th>
        <th>Teslim Alan</th>
        <th>Güncelle</th>
        <th>Teslim Detaylar</th>
    </tr>
    @{
        foreach (var k in Model)
        {
            <tr>
                <td>@k.FaturaId</td>
                <td>@k.FaturaSeriNo</td>
                <td>@k.FaturaSiraNo</td>
                <td>@k.VergiDairesi</td>
                <td>@k.Tarih</td>
                <td>@k.Saat</td>
                <td>@k.Toplam</td>
                <td>@k.TeslimEden</td>
                <td>@k.TeslimAlan</td>
                <td><a href="/Fatura/FaturaGetir/@k.FaturaId" class="btn btn-success">Güncelle</a></td>
                <td><a href="/Fatura/FaturaDetay/@k.FaturaId" class="btn btn-info">Detaylar</a></td>
            </tr>
        }
    }
</table>
<a href="/Fatura/FaturaEkle" class="btn btn-primary">Departman Ekle</a>